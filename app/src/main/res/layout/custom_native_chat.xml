<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/native_ad_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ad_corner"
        android:layout_marginEnd="@dimen/_40sdp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/relStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@color/gnt_gray" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/cta"
                    android:layout_marginEnd="@dimen/gnt_default_margin"
                    android:layout_toEndOf="@+id/relStart"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/headline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/ad_notification_view"
                                android:layout_width="22dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:background="@drawable/bg_border"
                                android:fontFamily="@font/google"
                                android:gravity="center"
                                android:includeFontPadding="true"
                                android:lines="1"
                                android:paddingVertical="@dimen/_1sdp"
                                android:text="AD"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_8ssp" />

                            <TextView
                                android:id="@+id/primary"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:fontFamily="@font/google"
                                android:lines="1"
                                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                                android:textColor="@color/gnt_black" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/gnt_no_margin"
                            android:layout_marginBottom="3dp"
                            android:fontFamily="@font/googlefont"
                            android:maxLines="2"
                            android:minLines="2"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/gnt_gray" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/rtvRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_marginEnd="@dimen/gnt_no_margin"
                                android:layout_marginBottom="3dp"
                                android:fontFamily="@font/googlefont"
                                android:maxLines="1"
                                android:visibility="gone"
                                android:layout_gravity="center_vertical"
                                android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                                android:textColor="@color/black" />

                            <RatingBar
                                android:id="@+id/rating_bar"
                                style="@style/gnt_RatingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:isIndicator="true"
                                android:lines="1"
                                android:visibility="gone"
                                android:numStars="5"
                                android:stepSize="0.1" />

                            <TextView
                                android:id="@+id/secondary"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/gnt_no_margin"
                                android:layout_marginEnd="@dimen/gnt_no_margin"
                                android:layout_marginBottom="@dimen/gnt_no_margin"
                                android:gravity="center"
                                android:lines="1"
                                android:visibility="gone"
                                android:fontFamily="@font/googlefont"
                                android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                                android:textColor="#79E0E0E0" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </LinearLayout>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/cta"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/gnt_smallbtn_outline_shape"
                    android:gravity="center"
                    android:text="INSTALL"
                    android:elevation="0dp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:textColor="@color/commonwhite" />

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.gms.ads.nativead.NativeAdView>