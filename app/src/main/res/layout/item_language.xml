<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/cardBackgroundColor"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:id="@+id/layoutLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:paddingVertical="@dimen/_8sdp"
        android:paddingHorizontal="@dimen/_12sdp">

        <LinearLayout
            android:id="@+id/icon_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="36dp"
            android:gravity="start|center_vertical"
            android:orientation="horizontal"
            android:paddingStart="0dp"
            android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <ImageView
                android:id="@+id/ivFlag"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="@null"
                tools:src="@drawable/flag_af" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvLanguageName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/_12ssp"
                android:textColor="?android:attr/textColorPrimary"
                tools:text="Preference title" />

            <TextView
                android:id="@+id/tvLanguageTranslation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_below="@id/tvLanguageName"
                android:layout_alignStart="@id/tvLanguageName"
                android:textColor="?android:attr/textColorSecondary"
                tools:text="Preference summary" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/selectedMark"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:padding="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:src="@drawable/ic_radio_unselected"
            android:visibility="visible"
            app:tint="?attr/radioTint"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>