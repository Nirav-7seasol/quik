<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="AppTheme" parent="AppBaseTheme" />

    <style name="AppBaseTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:divider">@color/separatorDark</item>
        <item name="android:navigationBarColor">@color/backgroundDark</item>
        <item name="android:queryBackground">@color/bubbleDark</item>
        <item name="android:statusBarColor">@color/backgroundDark</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorTertiary">@color/text_tertiary</item>
        <item name="android:windowBackground">@color/backgroundDark</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="actionBarPopupTheme">@style/PopupTheme</item>
        <item name="bubbleColor">@color/bubbleDark</item>
        <item name="bottomAppBarStyle">@style/BottomAppTheme</item>
        <item name="colorPrimary">@color/backgroundDark</item>
        <item name="colorPrimaryDark">@color/backgroundDark</item>
        <item name="selectableItemBackground">@drawable/ripple_dark</item>
        <item name="switchThumbEnabled">@color/switchThumbEnabledDark</item>
        <item name="switchThumbDisabled">@color/switchThumbDisabledDark</item>
        <item name="switchTrackEnabled">@color/switchTrackEnabledDark</item>
        <item name="switchTrackDisabled">@color/switchTrackDisabledDark</item>
        <item name="android:fontFamily">@font/googlefont</item>
        <item name="windowActionBar">false</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="cardBackgroundColor">@color/cardBgColorDark</item>
        <item name="radioTint">@color/white</item>
        <item name="chatBgColor">@color/bubbleDark</item>
        <item name="iconTintSolid">@color/white</item>
        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="AppThemeDialog" parent="Theme.Material3.Dark.Dialog">
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorTertiary">@color/text_tertiary</item>
        <item name="android:windowBackground">@color/backgroundDark</item>
        <item name="actionBarPopupTheme">@style/PopupTheme</item>
        <item name="bubbleColor">@color/bubbleDark</item>
        <item name="colorPrimary">@color/backgroundDark</item>
        <item name="android:fontFamily">@font/googlefont</item>
        <item name="colorPrimaryDark">@color/backgroundDark</item>
        <item name="selectableItemBackground">@drawable/ripple_dark</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="PopupTheme" parent="ThemeOverlay.AppCompat">
        <item name="android:colorBackground">@color/backgroundDark</item>
        <item name="android:textColor">@color/textPrimaryDark</item>
        <item name="android:fontFamily">@font/googlefont</item>
    </style>

    <!-- Black theme -->
    <style name="AppTheme.Black">
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="bubbleColor">@color/bubbleBlack</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:fontFamily">@font/googlefont</item>
        <item name="bottomAppBarStyle">@style/BottomAppTheme.Black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="cardBackgroundColor">@color/cardBgColorBlack</item>
        <item name="chatBgColor">@color/bubbleBlack</item>
    </style>

    <style name="AppThemeDialog.Black">
        <item name="android:windowBackground">@color/black</item>
        <item name="actionBarPopupTheme">@style/PopupTheme.Black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:fontFamily">@font/googlefont</item>
        <item name="colorPrimaryDark">@color/black</item>

    </style>

    <style name="PopupTheme.Black">
        <item name="android:colorBackground">@color/black</item>
        <item name="android:fontFamily">@font/googlefont</item>
        <item name="bubbleColor">@color/bubbleBlack</item>
    </style>



    <style name="BottomAppTheme" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/backgroundDark</item>
        <item name="android:fontFamily">@font/googlefont</item>
    </style>
    <style name="BottomAppTheme.Black" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/black</item>
        <item name="android:fontFamily">@font/googlefont</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/grey</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyleDark</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyleDark</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyleDark</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyleDark</item>
    </style>

    <style name="TitleTextStyleDark" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BodyTextStyleDark" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PositiveButtonStyleDark" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_primary</item>
        <item name="rippleColor">#666666</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NegativeButtonStyleDark" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="rippleColor">#666666</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="Widget.CalendarView.Custom" parent="@android:style/Widget.DeviceDefault.Light.CalendarView">
        <item name="android:textColorPrimary">#5e99a0</item>
        <item name="android:titleTextStyle">@style/textTest</item>
        <item name="android:weekDayTextAppearance">@style/textTest2</item>
        <item name="android:dateTextAppearance">@style/textTest</item>
        <item name="android:colorPrimary">#ffffff</item>
        <item name="colorAccent">#5e99a0</item>
    </style>

    <style name="textTest" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textTest2" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">#aaaaaa</item>
    </style>

    <style name="CdoAppTheme1" parent="@style/Theme.VoiceRecorder1">
        <item name="android:statusBarColor">@color/backgroundDark</item>
        <item name="android:navigationBarColor">@color/backgroundDark</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.VoiceRecorder1" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:forceDarkAllowed">false</item>
        <!--        <item name="colorAccent">@color/tools_theme</item>-->
        <!--        <item name="colorOnPrimary">@color/bgcolor</item>-->
        <!--        <item name="colorOnSecondary">@color/tint_icon_color</item>-->
        <!--        <item name="colorPrimary">@color/app_color</item>-->
        <!--        <item name="colorPrimaryVariant">@color/app_color</item>-->
        <!--        <item name="colorSecondary">@color/app_color</item>-->
        <!--        <item name="colorSecondaryVariant">@color/app_color</item>-->
    </style>

    <style name="AppTheme.TransparentWindow" parent="@style/Theme.Material3.Dark.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:statusBarColor">#aa000000</item>
        <item name="backgroundColor">@android:color/transparent</item>
    </style>
</resources>
