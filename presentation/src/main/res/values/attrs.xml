<?xml version="1.0" encoding="utf-8"?>

<resources>

    <declare-styleable name="WheelPicker">
        <attr name="wheel_data" format="reference" />
        <attr name="wheel_selected_item_position" format="integer" />
        <attr name="wheel_item_text_size" format="dimension" />
        <attr name="wheel_item_text_color" format="color" />
        <attr name="wheel_selected_item_text_color" format="color" />
        <attr name="wheel_same_width" format="boolean" />
        <attr name="wheel_maximum_width_text" format="string" />
        <attr name="wheel_maximum_width_text_position" format="integer" />
        <attr name="wheel_visible_item_count" format="integer" />
        <attr name="wheel_item_space" format="dimension" />
        <attr name="wheel_cyclic" format="boolean" />
        <attr name="wheel_indicator" format="boolean" />
        <attr name="wheel_indicator_color" format="color" />
        <attr name="wheel_indicator_size" format="dimension" />
        <attr name="wheel_curtain" format="boolean" />
        <attr name="wheel_curtain_color" format="color" />
        <attr name="wheel_atmospheric" format="boolean" />
        <attr name="wheel_curved" format="boolean" />
        <attr name="wheel_item_align" format="enum">
            <enum name="center" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>
        <attr name="wheel_font_path" format="string" />
    </declare-styleable>

    <attr name="title" format="string" />
    <attr name="summary" format="string" />
    <attr name="widget" format="reference" />

    <attr name="textColor" format="enum">
        <enum name="theme" value="0" />
        <enum name="primaryOnTheme" value="1" />
        <enum name="secondaryOnTheme" value="2" />
        <enum name="tertiaryOnTheme" value="3" />
    </attr>

    <attr name="colorToolbar" format="reference" />
    <attr name="colorDrawable" format="reference" />
    <attr name="colorSearchView" format="reference" />
    <attr name="colorBackground" format="reference" />
    <attr name="colorBottomAppBar" format="reference" />
    <attr name="colorDialogBackground" format="reference" />

    <attr name="textSize" format="enum">
        <enum name="primary" value="0" />
        <enum name="secondary" value="1" />
        <enum name="tertiary" value="2" />
        <enum name="toolbar" value="3" />
        <enum name="dialog" value="4" />
        <enum name="emoji" value="5" />
    </attr>

    <declare-styleable name="CustomTextView">
        <attr name="textColor" />
        <attr name="textSize" />
    </declare-styleable>

    <declare-styleable name="CustomEditText">
        <attr name="textColor" />
        <attr name="textSize" />
    </declare-styleable>

    <declare-styleable name="PreferenceView">
        <attr name="title" />
        <attr name="summary" />
        <attr name="widget" />
        <attr name="icon" format="reference" />
    </declare-styleable>

    <declare-styleable name="RadioPreferenceView">
        <attr name="title" />
        <attr name="summary" />
        <attr name="widget" />
    </declare-styleable>

    <declare-styleable name="BlockingManagerPreferenceView">
        <attr name="icon" />
        <attr name="title" />
        <attr name="summary" />
        <attr name="widget" />
    </declare-styleable>

</resources>
